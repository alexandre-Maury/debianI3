# diminuer le volume sonore
# bindsym $mod+comma exec --no-startup-id pactl set-sink-volume 1 -5%
# couper le son
# bindsym $mod+p exec --no-startup-id pactl set-sink-mute 1 toggle


# Utilisez la souris + $mod pour faire glisser les fenêtres flottantes à leur position désirée
floating_modifier $mod

# AJOUT :
# Ouvrir un terminal -> Changement du terminal
bindsym $mod+Return exec gnome-terminal
# Ouvrir Firefox
bindsym $mod+b exec firefox
# Quitter une fenêtre
bindsym $mod+Shift+q kill
# Lancer le centre de contrôle GNOME
bindsym $mod+Shift+p exec gnome-control-center


# démarrer dmenu (un lanceur d'applications)
# bindsym $mod+d exec dmenu_run

# AJOUT :
bindsym $mod+d exec rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi  # Raccourci pour ouvrir le menu d'applications
bindsym $mod+t exec rofi -show window -config ~/.config/rofi/rofidmenu.rasi  # Raccourci pour ouvrir le menu des fenêtres

# AJOUT :
# Utilisez ces touches pour le focus, les mouvements et redimensionner dans les directions lorsque les flèches ne sont pas pratiques
set $up k
set $down j
set $left h
set $right l

# changer le focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# déplacer la fenêtre sélectionnée
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# diviser en orientation horizontale
bindsym $mod+x split h

# diviser en orientation verticale
bindsym $mod+y split v

# entrer en mode plein écran pour le conteneur sélectionné
bindsym $mod+f fullscreen toggle

# changer la disposition des conteneurs (empilé, onglets, basculer division)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# basculer entre le carrelage et le flottant
bindsym $mod+Shift+space floating toggle

# changer le focus entre les fenêtres carrelées et flottantes
bindsym $mod+space focus mode_toggle

# focaliser le conteneur parent
bindsym $mod+a focus parent

# Définir des noms pour les espaces de travail par défaut
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# basculer vers le bureau
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# déplacer le conteneur sélectionné vers le bureau
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Basculer entre les espaces de travail : $mod + Ctrl + Page Précédente pour aller au prochain espace de travail, et $mod + Ctrl + Page Suivante pour revenir au précédent.
bindsym $mod+Control+Prior workspace next
bindsym $mod+Control+Next workspace prev

# Mode pour redimensionner les fenêtres (il est également possible d'utiliser la souris pour cela)
mode "resize" {
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt
        
        bindsym Shift+$left   resize shrink width 1 px or 1 ppt
        bindsym Shift+$down   resize grow height 1 px or 1 ppt
        bindsym Shift+$up     resize shrink height 1 px or 1 ppt
        bindsym Shift+$right  resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# recharger le fichier de configuration
bindsym $mod+Shift+c reload

# redémarrer i3 sur place (préserve votre mise en page/session, peut être utilisé pour mettre à jour i3)
bindsym $mod+Shift+r restart

# quitter i3 (vous déconnecte de votre session X)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Tu pars mon pote ?' -b 'ouais, laisse-moi sortir' 'i3-msg exit'"

# Pas de titre dans les bordures de fenêtres
font pango:DejaVu Sans Mono 0

# Épaisseur de la bordure des nouvelles fenêtres
new_window pixel 3

# Couleurs des bordures et arrière-plans pour les fenêtres
# Fenêtre actuellement focalisée
client.focused          #ff6ac1 #285577 #ffffff #2e9ef4   #ff6ac1
# Fenêtre inactivée mais pas focalisée
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
# Fenêtre non focalisée
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
# Fenêtre urgente (par exemple, notifications)
client.urgent           #2f343a #900000 #ffffff #900000   #900000
# Fenêtre en attente de placement (placeholders)
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
# Couleur de fond générale pour les clients
client.background       #ffffff

# Contrôles de luminosité de l'écran
# https://github.com/multiplexd/brightlight
bindsym $mod+F11 exec brightlight -d 750
bindsym $mod+F12 exec brightlight -i 750


