# Copier la capture d'écran de la fenêtre active dans le presse-papiers
bindsym Print exec maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
# Enregistrer la capture d'écran de la fenêtre active dans ~/Pictures/Captures
bindsym Shift+Print exec maim -i $(xdotool getactivewindow) ~/Pictures/Captures/$(date +%T).png
# Capture d'écran de sélection par l'utilisateur
# Copier la sélection de l'écran dans le presse-papiers
bindsym --release $mod+Print exec maim -s | xclip -selection clipboard -t image/png
# Enregistrer la sélection de l'écran dans le presse-papiers
bindsym --release $mod+Shift+Print exec maim -s ~/Pictures/Captures/$(date +%T).png

# Raccourci clavier F1 pour afficher les astuces de raccourcis clavier
bindsym F1 exec ~/.config/i3/keyhint-2

# alternative : autre méthode pour afficher la liste des raccourcis
# Raccourci clavier $mod+F1 pour ouvrir le fichier de raccourcis dans l'éditeur
bindsym $mod+F1 exec ~/.config/i3/keybindings


# Définir des variables pour les valeurs des gaps
set $gaps_size 7
set $gaps_none 0

# Gaps si i3-GAPS n'est pas installé, commente cette ligne !
gaps inner $gaps_size
gaps outer $gaps_size

# Activer les smart gaps
smart_gaps on

#https://www.youtube.com/watch?v=HIiJ9GNtwAM
# Réduit les gaps intérieurs et extérieurs à zéro
bindsym $mod+Shift+d gaps inner all set $gaps_none; gaps outer all set $gaps_none
# Rétablit les gaps intérieurs et extérieurs à la valeur définie
bindsym $mod+Shift+g gaps inner all set $gaps_size; gaps outer all set $gaps_size

